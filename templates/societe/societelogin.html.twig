{% extends 'base.html.twig' %}
{% block title %}Connexion Professionnel
{% endblock %}
{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{
error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div class="container pt-5">

			<div class="row justify-content-center">
				<div class="card custom-box-shadow mb-5">
					<div class="col-12 justify-content-center py-5">
						<h1 class="text-center">Connexion Professionnel</h1>
					</div>
				</div>
				<div class="card custom-box-shadow mb-5">
					<div class="col-6">
						<div class="mb-3">
							<label for="username">Email</label>
							<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div class="mb-3">
							<label for="password">Password</label>
							<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
							<input type="hidden" name="_target_path" value="/">
						</div>
						<button class="btn btn-lg btn-primary" type="submit">
							Valider
						</button>
					</div>
				</div>
			</form>

		</div>
	</div>
{% endblock %}
